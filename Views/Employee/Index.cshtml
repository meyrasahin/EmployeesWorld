@model List<EmployeesWorld.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.js"></script>

<br />
<br />
<br />
<br />
<br />

<div class="container" style="padding-right: 100px;padding-left: 100px;">
    <table id="table_id" class="display">
        <thead>
            <tr class="text text-center">
                <th>Photo</th>
                <th>Name</th>
                <th>Job Title</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Name))
            {
                <tr>
                    <td><a class="text" href="/Employee/Details/@item.Id"><img class="img-fluid" src="~/template/public/assets/img/gallery/@item.Image" width="70" alt="..." /></a>
                    </td>
                    <td><a class="text" href="/Employee/Details/@item.Id">@item.Name</a></td>
                    <td><a class="text" href="/Employee/Details/@item.Id">@item.Title</a></td>
                    <td><a class="text" href="/Employee/Details/@item.Id">@item.Location</a></td>
                </tr>

            }
        </tbody>

    </table>
    <br />
    <a href="/Employee/Create/" class="btn btn-default" style="background-color:#6ecbc8">New Employee</a>
</div>


<br />
<br />
<br />
<br />

<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>