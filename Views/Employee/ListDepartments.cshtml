<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<div class="container" style="font-family:ui-monoscope">

    <div class="accordion accordion-flush open" id="accordionFlushExample">
        @foreach (var title in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id='flush-heading-@Model.IndexOf(title)'>
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target='#flush-collapse-@Model.IndexOf(title)' aria-expanded="false" aria-controls='flush-collapse-@Model.IndexOf(title)' style="font-size:1.5rem;background-color:white">
                        @title
                    </button>
                </h2>
                <div id='flush-collapse-@Model.IndexOf(title)' class="accordion-collapse collapse" aria-labelledby='flush-heading-@Model.IndexOf(title)' data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body" style="background-color:white">
                        <table class="table table-bordered">
                            <tbody>
                                @foreach (var employee in ViewBag.allEmployees)
                                {
                                    if (employee.Title == title)
                                    {
                                        <tr style="text-align-last:center">
                                            <td>
                                                <button type="button" class="btn" data-toggle="modal" data-target="#myModal-@ViewBag.allEmployees.IndexOf(employee)">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image" viewBox="0 0 16 16">
                                                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                                        <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                                                    </svg>
                                                </button>
                                                <div class="modal fade" id="myModal-@ViewBag.allEmployees.IndexOf(employee)" role="dialog">
                                                    <div class="modal-dialog">

                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-body">
                                                                <img src="~/template/public/assets/img/gallery/@employee.Image" style="width:400px" />
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </td>
                                            <td><a class="text" style="color: #212121" href="/Employee/Details/@employee.Id">@employee.Name</a></td>
                                            <td><a class="text" style="color: #212121" href="/Employee/Details/@employee.Id">@employee.Location</a></td>
                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

